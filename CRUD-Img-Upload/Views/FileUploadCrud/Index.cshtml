@model IEnumerable<CRUD_Img_Upload.Models.ImageCrudClass>
@{
    ViewData["Title"] = "Index";
}

<h1>Impleting crud Operation with file uplaod control</h1>
<h2>asp.net Core MVC</h2>
<hr />

    <form method="post" enctype="multipart/form-data" asp-controller="FileUploadCrudController" asp-action="Index ">
        <p>
            <input type="file" name=" fileobj" />
            <input type="submit" value="Upload"/>
        </p>
<table>
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Imgid)</th>
            <th>@Html.DisplayNameFor(model => model.Imagename)</th>
            <th>Image</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayNameFor(model => item.Imgid)</td>
                <td>@Html.DisplayNameFor(model => item.Imagename)</td>
                <img src="~/Images/@item.Imagename"height="80" width=" 120"/>
               @* <td>@Html.DisplayNameFor(model => item.Imagepath)</td>*@

                <td>
                   @Html.ActionLink("Edit", "Edit",new {id=item.Imgid }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Imgid}) | 
                    @Html.ActionLink("Delate", "Delete", new {id=item.Imgid })

                </td>
            </tr>


        }
    </tbody>

</table>
    </form>